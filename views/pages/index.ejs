<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <%- include("../layout/flash") %>
    <%- include("../layout/header") %>

    <div class="index-container">
        <div class="index-post my-post">
            <h1><span>Latest Posts</span></h1>
            <div class="wrapper">
                <% posts.reverse().forEach((post, index) => { %>
                    <div class="post-item">
                        <div class="post-img">
                            <img src="/uploads/<%= post.thumbnail %>" alt="">
                        </div>
                        <div class="details">
                            <div class="title">
                                <a href="/post/explore/<%= post._id %>">
                                    <h3><%= post.title %></h3> 
                                </a>
                            </div>
                            <div class="body">
                                <p><%= extractText(post.body) %></p>
                            </div>
                            <div class="read-more">
                                <small><%= moment(post.createdAt) %></small>
                                <p class="author">
                                    <a href="/author/<%= post.author._id %>">
                                    <%= post.author.name %></a>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>     
    </div>

        
    <%- include("../layout/footer") %>
</body>
</html>